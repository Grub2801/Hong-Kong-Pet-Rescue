app.controller('ShelterCtrl', ['$scope', '$auth', '$http', 'ShelterFactory', '$stateParams', '$state', function ($scope, $auth, $http, ShelterFactory, $stateParams, $state){
  var ShelterList = ShelterFactory;

  $scope.showAnimals = function () {
    $scope.show = true;
  }

  if ($state.current.name == "shelters") { // index
    $scope.allShelters = ShelterList.query();
    window.debug = $scope.allShelters;
  } else { // show
    $scope.shelter = ShelterList.get({id: $stateParams.shelterId})
  }
}]);
