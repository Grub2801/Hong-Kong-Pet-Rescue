app.controller('ShelterCtrl', ['$scope', '$auth', '$http', 'ShelterFactory', '$stateParams', function ($scope, $auth, $http, ShelterFactory, $stateParams){
  // console.log("ShelterCtrl");
  // console.log($stateParams.shelterId);

  var ShelterList = ShelterFactory;

  //show all shelters in api database
  $scope.allShelters = ShelterList.query();

