app.controller('HomeCtrl', ['$scope', '$auth', '$http', function ($scope, $auth, $http){
  console.log("HomeCtrl");

  $scope.animals = [];
  var env = window.location.origin;

  function getAnimals(){
    $http
      .get( env + '/api/animals' || 'http://localhost:3000/api/animals')
      .then(function(response){
        $scope.animals = response.data;
    });
  }

  getAnimals();





}])